<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:background="@drawable/bg"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout 
        android:layout_width="match_parent"
        android:background="#18677E"         
        android:layout_height="50dp">

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="定时播放"
                android:textColor="#fff"
                android:layout_centerVertical="true" android:layout_centerHorizontal="true"/>
    </RelativeLayout>
    <TextView android:layout_width="match_parent"
              android:background="@color/textColor"
              android:layout_marginRight="10dp"
              android:layout_marginLeft="10dp"
              android:layout_height="0.5dp"/>
    <RelativeLayout android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#70555555">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/tv_time" android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:orientation="vertical"
            >
        <RelativeLayout android:layout_width="match_parent"
                        android:id="@+id/time01"
                    	android:background="#70555555"
                        android:layout_height="50dp">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="关闭"
                    android:id="@+id/textView1" android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" android:layout_marginStart="40dp"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/check01"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="40dp"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:id="@+id/time02"
                    	android:background="#70555555"
                        android:layout_height="50dp">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="10分钟"
                    android:id="@+id/textView2" android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" android:layout_marginStart="40dp"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/check02"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="40dp"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:id="@+id/time03"
                    	android:background="#70555555"
                        android:layout_height="50dp">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="30分钟"
                    android:id="@+id/textView3" android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" android:layout_marginStart="40dp"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/check03"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="40dp"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:id="@+id/time04"
                    	android:background="#70555555"
                        android:layout_height="50dp">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="1小时"
                    android:id="@+id/textView4" android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" android:layout_marginStart="40dp"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/check04"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="40dp"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:id="@+id/time05"
                    	android:background="#70555555"
                        android:layout_height="50dp">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="2小时"
                    android:id="@+id/textView5" android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" android:layout_marginStart="40dp"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/check05"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="40dp"/>

        </RelativeLayout>
        <RelativeLayout android:layout_width="match_parent"
                        android:id="@+id/time06"
                    	android:background="#70555555"
                        android:layout_height="50dp">


            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="自定义"
                    android:id="@+id/textView6" android:layout_centerVertical="true"
                    android:layout_alignParentStart="true" android:layout_marginStart="40dp"/>
            <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/check06"
                    android:layout_centerVertical="true"
                    android:layout_alignParentEnd="true" android:layout_marginEnd="40dp"/>
        </RelativeLayout>


    </LinearLayout>



</LinearLayout>